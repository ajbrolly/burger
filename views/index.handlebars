
<h1>Cats!</h1>
<h2>Cats that are not sleepy!</h2>
<ul>
	{{#each cats}} {{#unless sleepy}} {{> cats/cat-block sleep=true}} {{/unless}} {{/each}}
</ul>
<h2>Cats that are sleepy!</h2>
<ul>
	{{#each cats}} {{#if sleepy}} {{> cats/cat-block sleep=false}} {{/if}} {{/each}}
</ul>


<div class="container">
	<div class="row">
		<div class="col-md-12">
			<form>
				<label for="body">Enter a Burger You Want to Eat & Click the Submit Button:</label>
				<textarea class="form-control" rows="10" id="body"></textarea>
				<br>
				<button type="submit" class="btn btn-success submit">Submit</button>
			</form>
		</div>
	</div>
</div>


<form class="create-form">
	<div class="form-group">
		<label for="ca">Cat Name:</label>
		<input type="text" id="ca" name="name">
	</div>
	<div class="form-group">
		<label for="sleepy">Sleepy?</label>
		<br>
		<input type="radio" name="sleepy" value="1" checked> Sleepy!
		<br>
		<input type="radio" name="sleepy" value="0"> Awake
	</div>
	<button type="submit">Add Cat</button>
</form>